<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1.0/policyconfig.dtd">
<policyconfig>
  <vendor>The Gooroom Project</vendor>

  <action id="kr.gooroom.greeter.adduser">
    <_description>Gooroom Greeters</_description>
    <_message>Authentication is required to manage online users</_message>
    <defaults>
      <allow_any>no</allow_any>
      <allow_inactive>no</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/sbin/adduser</annotate>
  </action>

  <action id="kr.gooroom.greeter.chromium-pkexec">
    <_description>Gooroom Greeters</_description>
    <_message>Authentication is required to launch chromium</_message>
    <defaults>
      <allow_any>no</allow_any>
      <allow_inactive>no</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/bin/chromium</annotate>
    <annotate key="org.freedesktop.policykit.exec.allow_gui">true</annotate>
  </action>

  <action id="kr.gooroom.greeter.chromium-kill">
    <_description>Gooroom Greeters</_description>
    <_message>Authentication is required to kill chromium</_message>
    <defaults>
      <allow_any>no</allow_any>
      <allow_inactive>no</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/bin/killall</annotate>
  </action>
</policyconfig>

